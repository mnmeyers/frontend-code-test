<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Recipes</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="js/angular/angular.js"></script>
</head>
<body>
<div ng-app="myApp" ng-controller="recipesCtrl">

    <div class="container">
        <h2>Recipes</h2>
        <input ng-model="query" class="search" placeholder='Search by Ingredient' />
        <p><i class="fa fa-check"></i> a recipe to view the ingredients</p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                <th><i class="fa fa-list"></i> Recipe</th>
                <th><i class="fa fa-cutlery"></i> Cuisine</th>
                <th><i class="fa fa-clock-o"></i> Cooking Time</th>
                <th><i class="fa fa-shopping-cart"></i> Ingredients</th>

            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="recipe in recipes | filter:query">
                <td><input type="checkbox" name="checkboxes" ng-change="recipeChanged(recipe)" ng-model="recipe.checked" id="{{ 'object-' + $index }}" aria-label="Toggle ngHide"></td>
                <td>{{recipe.name}}</td>
                <td>{{recipe.type}}</td>
                <td>{{recipe.cook_time + ' min'}}</td>
                <td class="check-element animate-show" ng-show="recipe.checked" id="ingredients">{{arrayToString(recipe.ingredients)}}</td>

            </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('recipesCtrl', function($scope, $http) {
        var STORAGE_KEY = 'recipes';
        // save it locally
        var savedCheckedRecipes = function(){
            if (localStorage) {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(savedRecipes));
            }
        };
        var getSavedRecipes = function(){
            if (localStorage) {
                var saved = JSON.parse(localStorage.getItem(STORAGE_KEY));
                if(saved && typeof saved == 'object'){
                    return saved;
                }
            }
            return {};
        };
        // save a recipe
        $scope.recipeChanged = function(recipe){
            if(recipe.checked){
                savedRecipes[recipe.key] = true;
            } else {
                if(savedRecipes[recipe.key]){
                    delete savedRecipes[recipe.key];
                }
            }
            savedCheckedRecipes();
        };
        var savedRecipes = getSavedRecipes();
        $http.get("js/recipes.json")
                .success(function(data) {
                    $scope.recipes = [];
                    for(item in data ){
                        data[item].key = data[item].name + '_' + data[item].type;
                        // check if the recipe was saved
                        if(getSavedRecipes()){
                            data[item].checked = getSavedRecipes()[data[item].key];
                        }
                        $scope.recipes.push(data[item]);
                    }
                    $scope.arrayToString = function(string){
                        return string.sort().join(', ');
                    };
                });
    });
</script>
</body>
</html>